{
    "assets": {
        "app.css": [
            "+assets/css/variables.less",
            "+assets/css/mixins.less",
            "assets/vendor/bootstrap/less/bootstrap.less",
            "components/modules/**/*.less"
        ],
        "app.js": [
            "!components/modules/Test*/*",
            "assets/vendor/jquery/dist/jquery.min.js",
            "assets/vendor/terrificjs/dist/terrific.min.js",
            "assets/vendor/bootstrap/dist/js/bootstrap.min.js",
            "assets/js/*.js",
            "components/modules/*/js/*.js",
            "components/modules/*/js/skins/*.js"
        ]
    },
    "micro": {
        "components": {
            "element": {
                "template": "project/templates/element",
                "path": "components/elements",
                "component_prefix": "e",
                "skin_prefix": "skin"
            },
            "module": {
                "template": "project/templates/module",
                "path": "components/modules",
                "component_prefix": "mod",
                "skin_prefix": "skin"
            }
        },
        "view_file_extension": "html",
        "view_directory": "views",
        "view_partials_directory": "views/_partials"
    }
}