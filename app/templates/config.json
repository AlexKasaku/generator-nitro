{
  "assets": {
    "app.css": [
      "+assets/css/variables.<%= options.pre %>",
      "+assets/css/mixins.<%= options.pre %>",
      "assets/css/reset.css",
      "assets/css/basic.<%= options.pre %>",
      "components/**/css/*.<%= options.pre %>",
      "components/**/css/skins/*.<%= options.pre %>"
    ],
    "app.js": [
      "assets/vendor/jquery/dist/jquery.min.js",
      "assets/vendor/terrificjs/dist/terrific.min.js",
      "assets/js/*.js",
      "components/**/js/*.js",
      "components/**/js/skins/*.js"
    ]
  },
  "splendid": {
    "components": {
      "element": {
        "template": "project/blueprints/component",
        "path": "components/elements",
        "component_prefix": "e"
      },
      "group": {
        "template": "project/blueprints/component",
        "path": "components/groups",
        "component_prefix": "g"
      },
      "module": {
        "template": "project/blueprints/component",
        "path": "components/modules",
        "component_prefix": "mod",
        "skin_prefix": "skin"
      }
    }
  }
}
